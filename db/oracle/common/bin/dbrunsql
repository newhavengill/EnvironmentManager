#!/bin/sh

NAME=`basename "$0"`

USAGE="usage: $NAME -e <env name> [database] <file name> [sql opts]"
  ENV_NAME="$2"
   DB_NAME="$3"
 FILE_NAME="$4"
  #SQL_OPTS="$5"

##########################################################
# Parse Args

#if [ $# -ne 4 -a $# -ne 5 ]; then
#	echo "$USAGE"
#	exit 1
#fi

if [ "$1" != "-e" ]; then
	echo "$USAGE"
	exit 1
fi

if [ -z "$FILE_NAME" ]; then
	echo "$USAGE"
	exit 1
fi

if [ ! -f "$FILE_NAME" ]; then
	echo "$FILE_NAME: no such file .. (exiting)"
	exit 1
fi

dbArgs=`dbargs -e $ENV_NAME`
echo ${dbArgs}
if [ ! -z "${DB_NAME}" ]; then
	dbArgs=` echo "${dbArgs}" | sed s/{schema}/$DB_NAME/ `
fi

sqlplus "${dbArgs}" @${FILE_NAME}


