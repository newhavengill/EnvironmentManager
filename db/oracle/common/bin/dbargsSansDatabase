#!/bin/sh

NAME=`basename "$0"`

USAGE="usage: $NAME -e <env name>"

ENV_NAME="$2"

##########################################################
# Parse Args


if [ $# -ne 2 ] ; then
	echo "$USAGE"
	exit 1
fi

if [ "$1" != "-e" ] ; then
	echo "$USAGE"
	exit 1
fi


##########################################################
#
	host=`ueConfigValueForKey "$ENV_NAME" "db.host"`
username=`ueConfigValueForKey "$ENV_NAME" "db.username"`
password=`ueConfigValueForKey "$ENV_NAME" "db.password"`
	port=`ueConfigValueForKey "$ENV_NAME" "db.port"`
  domain=`ueConfigValueForKey "$ENV_NAME" "db.domain"`

echo "$username/$password@//$host:$port/$domain"

